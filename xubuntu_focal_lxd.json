{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "lxd",
            "name": "ubuntu-focal-lxd",
            "image": "ubuntu-daily:focal",
            "output_image": "ubuntu-focal-lxd",
            "publish_properties": {
              "description": "Trivial repackage with Packer"
            }
        }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "echo truc"
        ]
      }
    ],
    "post-processors": [
      {
        "type": "shell-local",
        "inline": [
          "lxc image export ubuntu-focal-lxd $(pwd)/output_images/ubuntu-focal-lxd-$(date +'%y%m%d-%H%M')",
          "lxc image delete ubuntu-focal-lxd"
        ]
      }
    ]
}